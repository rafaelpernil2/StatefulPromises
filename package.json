{
  "name": "stateful-promises",
  "version": "0.1.3",
  "description": "A project for creating stateful promise batches using Knockout.js",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "mocha -r ts-node/register src/tests/**/*.ts --timeout 50000",
    "build": "tsc",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "format": "tslint  --fix -c tslint.json src/{,**/}*.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push origin --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rafaelpernil2/StatefulPromises.git"
  },
  "keywords": [
    "promises",
    "knockout",
    "stateful",
    "kvo",
    "observable"
  ],
  "author": "rafaelpernil2",
  "license": "MIT",
  "dependencies": {
    "knockout": "^3.5.1"
  },
  "devDependencies": {
    "typescript": "^3.8.3",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^12.12.7",
    "chai": "^4.2.0",
    "mocha": "^7.1.1",
    "prettier": "^1.19.1",
    "ts-node": "^8.5.2",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.2.0"
  },
  "files": [
    "lib/**/*"
  ],
  "prettier": {
    "printWidth": 180,
    "trailingComma": "none",
    "singleQuote": true
  }
}
